<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgbaihatgoiy"
        android:background="@drawable/custom_background_banner"
        android:layout_margin ="4dp"
        android:layout_width="60dp"
        android:layout_height="60dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_marginTop="2dp"
        android:layout_weight="8"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txttenbathatgoiy"
            android:layout_toRightOf="@id/imgbaihatgoiy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="7dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Chạy ngay đi"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"/>
        <TextView
            android:id="@+id/txttencasibathatgoiy"
            android:layout_toRightOf="@id/imgbaihatgoiy"
            android:layout_below="@id/txttenbathatgoiy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textStyle="bold"
            android:maxWidth="150dp"
            android:text="Sơn Tùng M-TP"
            android:textSize="14sp"
            android:textColor="#585454"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/imgplaylistaddbaihatgoiy"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:layout_toLeftOf="@id/imgluotthichbaihatgoiy"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_playlist_add_black" />

    <ImageView
        android:id="@+id/imgluotthichbaihatgoiy"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:src="@drawable/ic_love" />
</LinearLayout>