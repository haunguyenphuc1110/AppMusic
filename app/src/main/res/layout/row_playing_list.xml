<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        
        <TextView
            android:id="@+id/txtphatnhacindex"
            android:textSize="18sp"
            android:textColor= "#FFFFFF"
            android:text="1"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txttenbaihatduocphat"
            android:ellipsize="end"
            android:singleLine="true"
            android:maxWidth="250dp"
            android:text="Chắc Ai Đó Sẽ Về"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_toRightOf="@id/txtphatnhacindex"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txttencasibaihat"
            android:ellipsize="end"
            android:singleLine="true"
            android:maxWidth="250dp"
            android:text="Sơn Tùng M-TP"
            android:textColor="@color/colorGray"
            android:textSize="14sp"
            android:layout_below="@id/txttenbaihatduocphat"
            android:layout_toRightOf="@id/txtphatnhacindex"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</RelativeLayout>