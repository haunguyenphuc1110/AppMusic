<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imgsearchhinhbaihat"
            android:layout_margin ="4dp"
            android:scaleType="fitXY"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_marginTop="4dp"
            android:layout_weight="8"
            android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtsearchtenbaihat"
                    android:layout_toRightOf="@id/imgsearchhinhbaihat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="7dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Chạy ngay đi"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#000000"/>
                <TextView
                    android:id="@+id/txtsearchtencasi"
                    android:layout_toRightOf="@id/imgsearchhinhbaihat"
                    android:layout_below="@id/txtsearchtenbaihat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="7dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:maxWidth="150dp"
                    android:text="Sơn Tùng M-TP"
                    android:textSize="16sp"
                    android:textColor="#000000"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/imgsearchplaylistadd"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:layout_toLeftOf="@id/imgluotthich"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_playlist_add" />

        <ImageView
            android:id="@+id/imgsearchluotthich"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="40dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:src="@drawable/ic_love" />
</LinearLayout>